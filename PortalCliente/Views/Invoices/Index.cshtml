@model IEnumerable<PortalCliente.Core.Dtos.Invoice>

@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/invoices.css" />

<!-- Header da página -->
<div class="page-header">
    <div>
        <h1><i class="fas fa-file-invoice"></i> 2ª Via de Fatura</h1>
    </div>
    <div>
        <p>Acesse e baixe suas faturas de forma fácil e rápida</p>
    </div>
</div>

<!-- Tabela para desktop -->
<section class="table-responsive">
    <table class="table table-hover table-modern">
            <thead>
                <tr>
                    <th scope="col"><i class="fas fa-id-card"></i> Documento</th>
                    <th scope="col"><i class="fas fa-download"></i> Download</th>
                    <th scope="col"><i class="fas fa-hashtag"></i> Nº Fatura</th>
                    <th scope="col"><i class="fas fa-calendar-plus"></i> Emissão</th>
                    <th scope="col"><i class="fas fa-calendar-times"></i> Vencimento</th>
                    <th scope="col"><i class="fas fa-dollar-sign"></i> Valor</th>
                    <th scope="col"><i class="fas fa-percent"></i> Juros</th>
                    <th scope="col"><i class="fas fa-exclamation-circle"></i> Status</th>
                    <th scope="col"><i class="fas fa-map-marker-alt"></i> Endereço</th>
                    <th scope="col"><i class="fas fa-barcode"></i> Código</th>
                </tr>
            </thead>
        <tbody>
            @foreach (var invoice in Model)
            {
                <tr>
                    <td>@invoice.Document</td>
                    <td>
                        <a href="#"
                           class="btn-download"
                           onclick="downloadInvoice('@invoice.InvoiceNumber', '@invoice.Document'); return false;"
                           data-bs-toggle="tooltip"
                           data-bs-placement="top"
                           title="Baixar fatura PDF">
                            <i class="fas fa-download"></i>
                            PDF
                        </a>
                    </td>
                    <td>@invoice.InvoiceNumber</td>
                    <td>@(DateTime.TryParse(invoice.CreatedAt, out var createdDate) ? createdDate.ToString("dd/MM/yyyy") : invoice.CreatedAt)</td>
                    <td>@(DateTime.TryParse(invoice.DueDate, out var dueDate) ? dueDate.ToString("dd/MM/yyyy") : invoice.DueDate)</td>
                    <td>@invoice.Value</td>
                    <td>@invoice.Penalty</td>
                    <td>
                        @if (invoice.IsNegative == "Sim")
                        {
                            <span class="status-badge status-negative">
                                <i class="fas fa-times-circle"></i> Negativado
                            </span>
                        }
                        else
                        {
                            <span class="status-badge status-positive">
                                <i class="fas fa-check-circle"></i> Regular
                            </span>
                        }
                    </td>
                    <td>@invoice.Address</td>
                    <td>@invoice.BarcodeNumber</td>
                </tr>
            }
        </tbody>
    </table>
</section>

<!-- Cards para mobile -->
<section class="card-responsive">
    @foreach (var invoice in Model)
    {
        <div class="invoice-card">
            <div class="invoice-card-header">
                <i class="fas fa-id-card"></i> Documento: @invoice.Document
            </div>
            <div class="invoice-card-body">
                <h5 class="invoice-card-title">
                    <i class="fas fa-file-invoice"></i>
                    Fatura Nº @invoice.InvoiceNumber
                </h5>

                <div class="invoice-detail">
                    <span class="invoice-label"><i class="fas fa-calendar-plus"></i> Emissão:</span>
                    <span class="invoice-value">@(DateTime.TryParse(invoice.CreatedAt, out var createdDateCard) ? createdDateCard.ToString("dd/MM/yyyy") : invoice.CreatedAt)</span>
                </div>

                <div class="invoice-detail">
                    <span class="invoice-label"><i class="fas fa-calendar-times"></i> Vencimento:</span>
                    <span class="invoice-value">@(DateTime.TryParse(invoice.DueDate, out var dueDateCard) ? dueDateCard.ToString("dd/MM/yyyy") : invoice.DueDate)</span>
                </div>

                <div class="invoice-detail">
                    <span class="invoice-label"><i class="fas fa-dollar-sign"></i> Valor:</span>
                    <span class="invoice-value highlight">@invoice.Value</span>
                </div>

                <div class="invoice-detail">
                    <span class="invoice-label"><i class="fas fa-percent"></i> Juros:</span>
                    <span class="invoice-value">@invoice.Penalty</span>
                </div>

                <div class="invoice-detail">
                    <span class="invoice-label"><i class="fas fa-exclamation-circle"></i> Status:</span>
                    @if (invoice.IsNegative == "Sim")
                    {
                        <span class="status-badge status-negative">
                            <i class="fas fa-times-circle"></i> Negativado
                        </span>
                    }
                    else
                    {
                        <span class="status-badge status-positive">
                            <i class="fas fa-check-circle"></i> Regular
                        </span>
                    }
                </div>

                <div class="invoice-detail">
                    <span class="invoice-label"><i class="fas fa-map-marker-alt"></i> Endereço:</span>
                    <span class="invoice-value">@invoice.Address</span>
                </div>

                <div class="invoice-detail">
                    <span class="invoice-label"><i class="fas fa-barcode"></i> Código:</span>
                    <span class="invoice-value">@invoice.BarcodeNumber</span>
                </div>

                <div class="invoice-detail">
                    <a href="#"
                       class="btn-download"
                       onclick="downloadInvoice('@invoice.InvoiceNumber', '@invoice.Document'); return false;"
                       title="Baixar fatura PDF">
                        <i class="fas fa-download"></i> Baixar PDF
                    </a>
                </div>
            </div>
        </div>
    }
</section>


@section Scripts {
    <script>
        function downloadInvoice(invoiceNumber, documentNumber) {
            // Cria a URL do download
            var url = '@Url.Action("Download", "Invoices")' + '?invoiceNumber=' + encodeURIComponent(invoiceNumber) + '&document=' + encodeURIComponent(documentNumber);

            // Faz a requisição usando fetch
            fetch(url)
                .then(response => {
                    if (!response.ok) {
                        // Se retornar 404 ou outro erro, mostra mensagem toast
                        toastr.error('Não foi possível baixar a fatura, por favor tente novamente mais tarde');
                        return null;
                    }
                    return response.blob();
                })
                .then(blob => {
                    if (blob) {
                        // Se o download foi bem sucedido, cria link temporário para baixar
                        var downloadUrl = window.URL.createObjectURL(blob);
                        var a = document.createElement('a');
                        a.href = downloadUrl;
                        a.download = invoiceNumber + '_' + documentNumber + '.pdf';
                        document.body.appendChild(a);
                        a.click();
                        a.remove();
                        window.URL.revokeObjectURL(downloadUrl);
                    }
                })
                .catch(error => {
                    console.error('Erro ao baixar fatura:', error);
                    toastr.error('Erro ao baixar a fatura. Por favor, tente novamente.');
                });
        }
    </script>
}