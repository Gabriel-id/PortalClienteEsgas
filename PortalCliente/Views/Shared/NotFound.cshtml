@{
    ViewData["Title"] = "Página não encontrada";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portal Cliente ESGAS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="logo-header">
        <div class="header-logo-container">
            <img src="~/assets/images/logo.jpeg" alt="Logo ESGAS" class="header-logo" />
        </div>
    </div>

    <div class="login-container">
        <div class="login-box">
            <!-- Ícone 404 -->
            <div class="mb-4">
                <i class="fas fa-search" style="font-size: 4rem; color: var(--esgas-primary);"></i>
            </div>

            <!-- Mensagem principal -->
            <h1 style="font-size: 2rem; font-weight: 600; color: var(--neutral-800); margin-bottom: 1rem;">
                404 - Página não encontrada
            </h1>

            <p style="color: var(--neutral-600); font-size: 1.1rem; line-height: 1.6; margin-bottom: 2rem;">
                A página que você está procurando não existe ou foi movida para outro endereço.
            </p>

            <!-- Sugestões -->
            <div style="margin-bottom: 2rem; text-align: left;">
                <p style="margin-bottom: 1rem; font-weight: 500; color: var(--neutral-700);">Você pode:</p>
                <ul style="list-style: none; padding: 0; color: var(--neutral-700);">
                    <li style="margin-bottom: 0.5rem; display: flex; align-items: center;">
                        <i class="fas fa-arrow-right" style="color: var(--esgas-primary); margin-right: 0.5rem;"></i>
                        Verificar se o endereço está correto
                    </li>
                    <li style="margin-bottom: 0.5rem; display: flex; align-items: center;">
                        <i class="fas fa-arrow-right" style="color: var(--esgas-primary); margin-right: 0.5rem;"></i>
                        Voltar à página inicial
                    </li>
                    <li style="margin-bottom: 0.5rem; display: flex; align-items: center;">
                        <i class="fas fa-arrow-right" style="color: var(--esgas-primary); margin-right: 0.5rem;"></i>
                        Usar o menu de navegação
                    </li>
                </ul>
            </div>

            <!-- Botões de ação -->
            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="/" class="btn btn-primary" style="flex: 1; min-width: 140px;">
                    <i class="fas fa-home" style="margin-right: 0.5rem;"></i>Página Inicial
                </a>
                <button onclick="history.back()" class="btn" style="flex: 1; min-width: 140px; background: transparent; color: var(--esgas-primary); border: 2px solid var(--esgas-primary);">
                    <i class="fas fa-arrow-left" style="margin-right: 0.5rem;"></i>Voltar
                </button>
            </div>
        </div>
    </div>
</body>
</html>